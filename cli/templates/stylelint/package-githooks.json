{
	"scripts": {
		"lint:css": "stylelint src/**/*.*ss"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"linters": {
			"src/**/*.*ss": [
				"stylelint"
			]
		}
	},
	"devDependencies": {
		"husky": "2.3.0",
		"lint-staged": "8.1.7",
		"stylelint": "10.0.1",
		"@namics/stylelint-config": "0.3.2"
	}
}