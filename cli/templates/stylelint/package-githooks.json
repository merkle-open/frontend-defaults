{
	"scripts": {
		"lint:css": "stylelint src/**/*.*ss"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"linters": {
			"src/**/*.*ss": [
				"stylelint"
			]
		}
	},
	"devDependencies": {
		"husky": "1.3.1",
		"lint-staged": "8.1.3",
		"stylelint": "9.10.1",
		"@namics/stylelint-config": "0.2.1"
	}
}