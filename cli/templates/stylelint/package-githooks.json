{
	"scripts": {
		"lint:css": "stylelint src/**/*.*ss"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"linters": {
			"src/**/*.*ss": [
				"stylelint"
			]
		}
	},
	"devDependencies": {
		"husky": "3.0.2",
		"lint-staged": "9.2.1",
		"stylelint": "10.1.0",
		"@namics/stylelint-config": "0.3.5"
	}
}