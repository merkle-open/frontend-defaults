{
	"scripts": {
		"cz": "git-cz"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"commitlint": {
		"extends": [
			"@namics/commitlint-conventional-changelog"
		]
	},
	"config": {
		"commitizen": {
			"path": "@namics/cz-conventional-changelog"
		}
	},
	"devDependencies": {
		"@namics/cz-conventional-changelog": "1.1.6",
		"@namics/commitlint-conventional-changelog": "1.1.7",
		"@commitlint/cli": "8.2.0",
		"husky": "3.0.8",
		"lint-staged": "9.4.2",
		"commitizen": "4.0.3"
	}
}