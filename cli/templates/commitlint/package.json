{
	"scripts": {
		"cz": "git-cz"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"commitlint": {
		"extends": [
			"@namics/commitlint-conventional-changelog"
		]
	},
	"config": {
		"commitizen": {
			"path": "@namics/cz-conventional-changelog"
		}
	},
	"devDependencies": {
		"@namics/cz-conventional-changelog": "1.1.1",
		"@namics/commitlint-conventional-changelog": "1.1.2",
		"@commitlint/cli": "7.6.1",
		"husky": "2.3.0",
		"lint-staged": "8.1.7",
		"commitizen": "3.1.1"
	}
}