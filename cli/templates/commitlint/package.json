{
	"scripts": {
		"cz": "git-cz"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"commitlint": {
		"extends": [
			"@namics/commitlint-conventional-changelog"
		]
	},
	"config": {
		"commitizen": {
			"path": "@namics/cz-conventional-changelog"
		}
	},
	"devDependencies": {
		"@namics/cz-conventional-changelog": "1.0.1",
		"@namics/commitlint-conventional-changelog": "1.0.0",
		"@commitlint/cli": "7.5.0",
		"husky": "1.3.1",
		"lint-staged": "8.1.3",
		"commitizen": "3.0.5"
	}
}