{
  "lint-staged": {
    "linters": {
      "*.{js,jsx,ts,tsx,json}": [
        "pretty-quick --staged"
      ]
    }
  },
  "scripts": {
    "prettier": "prettier --write \"**/*.*(js|jsx|ts|tsx|json)\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "@namics/prettier-config": "0.2.0",
    "husky": "3.0.1",
    "lint-staged": "9.2.0"
  }
}