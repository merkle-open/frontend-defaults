{
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "prettier": "prettier --write \"**/*.*(js|jsx|ts|tsx|json|md)\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "prettier": "1.18.2",
    "@namics/prettier-config": "0.4.0",
    "husky": "3.0.9",
    "lint-staged": "9.4.2"
  }
}
