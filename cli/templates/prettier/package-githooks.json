{
  "lint-staged": {
    "linters": {
      "*.{js,jsx,ts,tsx,json}": [
        "prettier --list-different --write"
      ]
    }
  },
  "scripts": {
    "prettier": "prettier --write \"**/*.*(js|jsx|ts|tsx|json)\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "prettier": "1.16.1",
    "@namics/prettier-config": "0.2.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.1"
  }
}